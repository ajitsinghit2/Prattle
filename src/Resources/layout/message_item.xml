<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:background="@drawable/detail_list_background"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
	<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/thumbContainer"
		android:background="@drawable/thumb_list_background"
		android:orientation="vertical"
		android:paddingRight="15dp"
		android:paddingLeft="15dp"
		android:layout_alignParentTop="true"
		android:layout_width="80dp"
		android:layout_height="wrap_content">
		<TextView
			android:id="@+id/dayOfMonth"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="@drawable/thumb_list_text"
			android:textStyle="bold"
			android:layout_centerHorizontal="true"
			android:layout_alignParentTop="true"
			android:textSize="40sp"/>
		
		<TextView
			android:id="@+id/month"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="@drawable/thumb_list_text"
			android:layout_below="@+id/dayOfMonth"
			android:layout_alignParentBottom="true"
			android:layout_centerHorizontal="true"
			android:paddingBottom="2dp"
			android:textSize="14sp"/>
	</RelativeLayout>
	
	<TextView
		android:id="@+id/groupName"
		android:layout_toRightOf="@+id/thumbContainer"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textStyle="bold"
		android:paddingLeft="5dp"
		android:layout_alignParentTop="true"
		android:textColor="@drawable/detail_list_text"
		android:textSize="20sp"/>
	
	<TextView
		android:id="@+id/recipientCount"
		android:layout_toRightOf="@+id/groupName"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentTop="true"
		android:paddingLeft="5dp"
		android:textColor="@drawable/action_bar"
		android:textSize="20sp"/>
	
	<TextView
		android:id="@+id/message"
		android:layout_below="@+id/groupName"
		android:layout_toRightOf="@+id/thumbContainer"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:paddingLeft="5dp"
		android:textColor="@drawable/detail_list_text"
		android:textSize="16sp"/>
</RelativeLayout>